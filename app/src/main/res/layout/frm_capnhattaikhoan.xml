<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:padding="20dp"
    tools:context=".Activity.capNhatTaiKhoan_MainActivity">

    <ImageView
        android:id="@+id/img_chiTietTaiKhoan_troLai"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:elevation="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icons_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Cập nhật tài khoản"
            android:textColor="#F2F2F2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/frmChiTietTK_edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingStart="5dp"
                android:inputType="number"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="#ebebeb"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/frmChiTietTK_edt_emails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Email"
                android:inputType="text"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="#ebebeb"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/frmChiTietTK_edt_matKhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Mật khẩu"
                android:textColor="@color/white"
                android:inputType="number"
                android:text=""
                android:textColorHint="#ebebeb"
                android:textSize="20sp" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Trạng thái tài khoản"
                    android:textColor="#ECD14C"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/frmChiTietTK_rdo_hoatDong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:hint="Hoạt động"
                        android:textColorHint="#ebebeb"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/frmChiTietTK_rdo_khoa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:hint="Khóa"
                        android:textColorHint="#ebebeb"
                        android:textSize="20sp" />
                </RadioGroup>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/frmChiTietTK_btn_Luu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:background="@drawable/custom_button"
        android:text="Lưu"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>